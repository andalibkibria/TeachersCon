<div class="row center">
	<h2 class="grey-text text-lighten-3">Teacher-Con</h2>
</div>
<div  class="row center">
<form action="col s12 m6 offset-m3">
	<div class="row">
		<div class="input-field col s12">
		    <label class="grey-text text-lighten-3" for="fullname">Full Name</label>
		    <input type="text" name="fullName" class="regisinput" id="fullname" required>
	   	</div>
		
		<div class="input-field col s12">
			<label class="grey-text text-lighten-3" for="email">Email</label>
		    <input type="text" name="email" class="regisinput" id="email" required>
		</div>
		
		<div class="input-field col s12">
		    <label class="grey-text text-lighten-3" for="password">Password</label>
		    <input type="text" name="password" class="regisinput" id="password" required>
		</div>

		<div class="input-field col s12">
		    <label class="grey-text text-lighten-3" for="phone">Phone Number</label>
		    <input type="text" name="phone" class="regisinput" id="phone" required>
		</div>

		<div class="input-field col s12">
		    <label class="grey-text text-lighten-3" for="address">Address</label>
		    <input type="text" name="address" class="regisinput" id="address" required>
		</div>
	<br>
		<div class="input-field col s12">	
			<label class="grey-text text-lighten-3" for="child">Child Name</label>
		    <input type="text" name="childname" class="regisinput" id="childname" required>
		</div>
	</div>    
	<br>
    <button class="waves-effect waves-light btn black" style="margin-bottom: 5%;" type="submit" id="registerbtn">Register</button>
