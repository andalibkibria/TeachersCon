<div class="row-center" method="post">
    <form action="col s12 m6 offest-m3">
        <div class="row">
            <div class="input-field col s12">
                <label class="grey-text text-lighten-3" style="font-size: 20px;" for="userName">Full Name</label>
                <input type="text" class="regisinput" id="userName" required>
            </div>

            <div class="input-field col s12">
                <label class="grey-text text-lighten-3" style="font-size: 20px;" for="email">Email</label>
                <input type="text" class="regisinput" id="email" required>
            </div>

            <div class="input-field col s12">
                <label class="grey-text text-lighten-3" style="font-size: 20px;" for="subject">Subject Title</label>
                <input type="text" class="regisinput" id="subject" required>
            </div>

            <div class="input-field col s12">
                <label class="grey-text text-lighten-3" style="font-size: 20px;" for="comment">Comment</label>
                <input type="text" class="regisinput" id="comment" required> 
            </div>
        </div>
    </form>
 
<div class="row center">
    <button class="waves-effect waves-light btn black" style="margin-bottom: 5%;" type="submit" id="submitComment">Submit</button> 
</div>    
</div>



